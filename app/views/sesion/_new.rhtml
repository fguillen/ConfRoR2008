<h5>Entrar</h5>
<% form_tag sesion_path do %>
<fieldset>
<ol>
	<li>
		<label for="login">Usuario</label>
		<%= text_field_tag 'login' %>
	</li>
	<li>
		<label for="password">Contraseña</label>
		<%= password_field_tag 'password' %>
	</li>
	<li>
		<%= image_submit_tag 'send.png' %>
	</li>
</ol>
</fieldset>
<% end %>

<p>
	<strong><%= link_to '¡Regístrate!', signup_url %></strong>
	&nbsp;
	<%= link_to 'Recuperar contraseña', reset_url %>
</p>